{
  "name": "drips-sdk",
  "version": "0.1.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "npm run build:contracts && npm run build:lib",
    "build:lib": "tsup --dts-resolve",
    "build:contracts": "typechain --target=ethers-v5 --out-dir contracts ./src/contracts/**.json",
    "build:lib-fast": "tsup",
    "dev": "nodemon --watch src -e ts,json --exec 'npm run build:lib-fast'",
    "prepare": "npm run build",
    "lint": "eslint src --ext .ts",
    "pretest": "tsc",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "test:coverage": "nyc npm run test"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.25",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "mocha": "^10.0.0",
    "moq.ts": "^9.0.2",
    "nodemon": "^2.0.16",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "ts-node": "^10.8.0",
    "tsup": "^5.12.7",
    "typechain": "^8.0.0",
    "typescript": "^4.6.4"
  },
  "peerDependencies": {
    "ethers": "^5.6.2"
  }
}
